<UserControl x:Class="Brainrot.DeskBand.BrainrotWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             Height="40" Width="100">
    <Border x:Name="RootBorder" 
            Background="#E6202428" 
            CornerRadius="4" 
            Padding="6,2"
            BorderThickness="1"
            BorderBrush="#33FFFFFF"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Emoji indicator -->
            <Border Grid.Column="0" 
                    Width="24" Height="24" 
                    CornerRadius="4" 
                    Background="#22FFFFFF"
                    VerticalAlignment="Center"
                    Margin="0,0,6,0">
                <TextBlock x:Name="StateEmoji" 
                           Text="ðŸ§ " 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Info -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="StateLabel" 
                           Text="Locked in" 
                           FontSize="10" 
                           FontWeight="SemiBold"
                           Foreground="#FFFFFFFF"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="FocusPercent" 
                               Text="100%" 
                               FontSize="9" 
                               Foreground="#FF4A90E2"/>
                    <TextBlock Text=" focus" 
                               FontSize="9" 
                               Foreground="#99FFFFFF"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
