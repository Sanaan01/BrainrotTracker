<Application
    x:Class="Brainrot.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brainrot.UI">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF202020" />
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FF2D2D2D" />
                    <SolidColorBrush x:Key="CardStrokeBrush" Color="#19FFFFFF" />

                    <SolidColorBrush x:Key="CardSubtleFillColorDefaultBrush" Color="#0FFFFFFF" />

                    <SolidColorBrush x:Key="RotCardBackgroundBrush" Color="#1AFA5A5A" />
                    <SolidColorBrush x:Key="RotCardStrokeBrush" Color="#40FA5A5A" />
                    <SolidColorBrush x:Key="RotPillBackgroundBrush" Color="#26FA5A5A" />
                    <SolidColorBrush x:Key="RotPillStrokeBrush" Color="#80FA5A5A" />

                    <SolidColorBrush x:Key="FocusCardBackgroundBrush" Color="#1A5A9EFA" />
                    <SolidColorBrush x:Key="FocusCardStrokeBrush" Color="#405A9EFA" />
                    <SolidColorBrush x:Key="FocusPillBackgroundBrush" Color="#265A9EFA" />
                    <SolidColorBrush x:Key="FocusPillStrokeBrush" Color="#805A9EFA" />

                    <SolidColorBrush x:Key="NeutralCardBackgroundBrush" Color="#1AFFFFFF" />
                    <SolidColorBrush x:Key="NeutralCardStrokeBrush" Color="#19FFFFFF" />
                    <SolidColorBrush x:Key="NeutralPillBackgroundBrush" Color="#1AFFFFFF" />
                    <SolidColorBrush x:Key="NeutralPillStrokeBrush" Color="#40FFFFFF" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFF3F3F3" />
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="CardStrokeBrush" Color="#0F000000" />
                    <SolidColorBrush x:Key="CardSubtleFillColorDefaultBrush" Color="#09000000" />

                    <SolidColorBrush x:Key="RotCardBackgroundBrush" Color="#1AC50F1F" />
                    <SolidColorBrush x:Key="RotCardStrokeBrush" Color="#40C50F1F" />
                    <SolidColorBrush x:Key="RotPillBackgroundBrush" Color="#1AC50F1F" />
                    <SolidColorBrush x:Key="RotPillStrokeBrush" Color="#80C50F1F" />

                    <SolidColorBrush x:Key="FocusCardBackgroundBrush" Color="#1A005FB7" />
                    <SolidColorBrush x:Key="FocusCardStrokeBrush" Color="#40005FB7" />
                    <SolidColorBrush x:Key="FocusPillBackgroundBrush" Color="#1A005FB7" />
                    <SolidColorBrush x:Key="FocusPillStrokeBrush" Color="#80005FB7" />

                    <SolidColorBrush x:Key="NeutralCardBackgroundBrush" Color="#0F000000" />
                    <SolidColorBrush x:Key="NeutralCardStrokeBrush" Color="#19000000" />
                    <SolidColorBrush x:Key="NeutralPillBackgroundBrush" Color="#0F000000" />
                    <SolidColorBrush x:Key="NeutralPillStrokeBrush" Color="#40000000" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>